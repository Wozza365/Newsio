<Window x:Class="WpfApplication1.CustomChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="CustomChoiceWindow" Height="300" Width="429.916">
    <Grid>
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="214" Margin="10,10,0,0" VerticalAlignment="Top" Width="402">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Gamemode" Width="120" DisplayMemberBinding="{Binding GameMode}" />
                    <GridViewColumn Header="Char 1" Width="80" DisplayMemberBinding="{Binding CharOne}" />
                    <GridViewColumn Header="Char 2" Width="80" DisplayMemberBinding="{Binding CharTwo}" />
                    <GridViewColumn Header="Location" Width="120" DisplayMemberBinding="{Binding Location}" />
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="OkButton" Content="Ok" HorizontalAlignment="Left" Margin="176,239,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="1.426,0.414" Click="OkButton_Click"/>

    </Grid>
</Window>
